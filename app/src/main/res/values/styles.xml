<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>

    </style>


    <style name="ConversionField">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:ems">7</item>
        <item name="android:inputType">number</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/material_color_white</item>
        <item name="android:textColorHint">@color/textColorPrimary</item>
        <item name="android:textSize">33sp</item>
    </style>


</resources>
